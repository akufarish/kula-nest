generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String 
  kelas String
  role String
  email String
  password String
  token String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project Project[]
}

model Tools {
  id Int @id @default(autoincrement())
  tools String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project Project[]
}

model Project {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  tool Tools @relation(fields: [toolId], references: [id])
  userId Int
  toolId Int
  namaProject String
  deskripsi String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  gambar Gambar[]
  komenat Komentar[]
}

model Gambar {
  id Int @id @default(autoincrement())
  project Project @relation(fields: [projectId], references: [id])
  projectId Int
  gambar String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Komentar {
  id Int @id @default(autoincrement())
  project Project @relation(fields: [projectId], references: [id])
  projectId Int
  komentar String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}